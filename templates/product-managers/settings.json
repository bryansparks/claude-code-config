{
  "productManager": {
    "version": "1.0.0",
    "description": "Product Manager persona configuration with comprehensive PM workflows",

    "hooks": {
      "enabled": true,
      "autoRun": {
        "user-story-validator.sh": {
          "trigger": "before_commit",
          "filePattern": "*.md",
          "description": "Validates user story format and quality before committing",
          "minQualityScore": 70,
          "failOnLowScore": false,
          "reportFormat": "detailed"
        },
        "acceptance-criteria-checker.sh": {
          "trigger": "on_story_creation",
          "description": "Validates acceptance criteria completeness and testability",
          "minCriteria": 2,
          "requireGivenWhenThen": false,
          "failOnLowScore": false
        },
        "feature-completeness-checker.sh": {
          "trigger": "pre_deployment",
          "mode": "interactive",
          "description": "Interactive checklist to verify feature implementation against requirements"
        },
        "documentation-generator.sh": {
          "trigger": "post_feature_completion",
          "types": ["user-guide", "technical"],
          "description": "Auto-generates user and technical documentation from requirements"
        },
        "stakeholder-summary.sh": {
          "trigger": "weekly",
          "types": ["sprint", "executive"],
          "description": "Weekly stakeholder updates and sprint summaries"
        },
        "feature-impact-analyzer.sh": {
          "trigger": "before_prioritization",
          "description": "Analyzes feature impact for prioritization decisions",
          "includeRiceScore": true,
          "includeDependencies": true
        }
      },
      "manual": {
        "description": "Hooks that can be run manually via commands",
        "available": [
          "user-story-validator.sh <file>",
          "acceptance-criteria-checker.sh <file>",
          "feature-completeness-checker.sh interactive <requirements-file>",
          "documentation-generator.sh user-guide <source> [output]",
          "stakeholder-summary.sh executive <source> [output]",
          "feature-impact-analyzer.sh <feature-file>"
        ]
      }
    },

    "subagents": {
      "feature-analyzer": {
        "description": "Analyzes features comprehensively",
        "autoActivate": ["analyze-feature", "roadmap-planning", "estimate-feature"],
        "capabilities": [
          "Business value analysis",
          "User impact assessment",
          "Technical complexity evaluation",
          "Dependency mapping",
          "Risk assessment",
          "RICE scoring"
        ]
      },
      "requirement-validator": {
        "description": "Validates requirements quality",
        "autoActivate": ["write-user-story", "create-acceptance-criteria", "requirements-doc"],
        "standards": {
          "smart": true,
          "invest": true,
          "minQualityScore": 70
        }
      },
      "user-story-writer": {
        "description": "Creates well-formed user stories",
        "autoActivate": ["write-user-story"],
        "format": "as-a-i-want-so-that",
        "acceptanceCriteria": {
          "format": "given-when-then",
          "minimum": 2,
          "includeEdgeCases": true
        }
      },
      "roadmap-planner": {
        "description": "Product roadmap creation and management",
        "autoActivate": ["roadmap-planning"],
        "prioritization": {
          "defaultMethod": "rice",
          "alternatives": ["value-effort", "moscow", "kano"]
        },
        "formats": ["quarterly", "now-next-later", "strategic"]
      },
      "ux-evaluator": {
        "description": "UX and usability evaluation",
        "autoActivate": ["ux-flow-analysis"],
        "frameworks": {
          "heuristics": "nielsen-10",
          "accessibility": "wcag-2.1-aa",
          "cognitiveLoad": true,
          "mobileResponsive": true
        }
      }
    },

    "commands": {
      "analyze-feature": {
        "description": "Comprehensive feature analysis",
        "subagents": ["feature-analyzer", "requirement-validator", "ux-evaluator"],
        "hooks": ["feature-impact-analyzer.sh"],
        "mcpServers": ["github", "context7", "memory"],
        "outputFormat": "markdown",
        "includeRiceScore": true
      },
      "write-user-story": {
        "description": "Create well-formed user stories",
        "subagents": ["user-story-writer", "requirement-validator"],
        "hooks": ["user-story-validator.sh", "acceptance-criteria-checker.sh"],
        "mcpServers": ["memory", "github"],
        "validation": {
          "autoValidate": true,
          "minQualityScore": 70
        }
      },
      "create-acceptance-criteria": {
        "description": "Generate acceptance criteria",
        "subagents": ["user-story-writer"],
        "hooks": ["acceptance-criteria-checker.sh"],
        "format": "given-when-then",
        "includeEdgeCases": true
      },
      "estimate-feature": {
        "description": "Feature effort estimation",
        "subagents": ["feature-analyzer"],
        "estimationMethod": "story-points",
        "includeRanges": true,
        "breakdownByDiscipline": true
      },
      "roadmap-planning": {
        "description": "Product roadmap creation",
        "subagents": ["roadmap-planner", "feature-analyzer"],
        "mcpServers": ["github", "context7", "memory"],
        "defaultFormat": "quarterly",
        "capacityPlanning": true
      },
      "requirements-doc": {
        "description": "Requirements documentation",
        "subagents": ["requirement-validator"],
        "hooks": ["documentation-generator.sh"],
        "mcpServers": ["filesystem", "memory"],
        "types": ["prd", "functional", "user", "technical"]
      },
      "stakeholder-update": {
        "description": "Stakeholder communications",
        "hooks": ["stakeholder-summary.sh"],
        "mcpServers": ["github", "context7"],
        "types": ["executive", "sprint", "email", "roadmap"],
        "audienceTailoring": true
      },
      "ux-flow-analysis": {
        "description": "UX flow analysis and validation",
        "subagents": ["ux-evaluator"],
        "mcpServers": ["playwright", "memory"],
        "automatedTesting": true,
        "wcagCompliance": "aa"
      }
    },

    "workflows": {
      "newFeature": {
        "description": "Complete workflow for new feature development",
        "steps": [
          {
            "step": 1,
            "command": "analyze-feature",
            "description": "Analyze and validate feature idea"
          },
          {
            "step": 2,
            "command": "write-user-story",
            "description": "Create user stories with acceptance criteria"
          },
          {
            "step": 3,
            "command": "estimate-feature",
            "description": "Estimate effort and timeline"
          },
          {
            "step": 4,
            "command": "roadmap-planning",
            "description": "Add to roadmap with proper sequencing"
          },
          {
            "step": 5,
            "command": "ux-flow-analysis",
            "description": "Validate UX before development"
          },
          {
            "step": 6,
            "command": "requirements-doc",
            "description": "Generate comprehensive requirements doc"
          }
        ]
      },
      "sprintPlanning": {
        "description": "Sprint planning workflow",
        "steps": [
          {
            "step": 1,
            "description": "Review backlog and prioritize",
            "command": "analyze-feature --quick"
          },
          {
            "step": 2,
            "description": "Validate stories are ready",
            "hook": "user-story-validator.sh"
          },
          {
            "step": 3,
            "description": "Estimate capacity and allocate",
            "command": "estimate-feature"
          }
        ]
      },
      "featureCompletion": {
        "description": "Feature completion and launch workflow",
        "steps": [
          {
            "step": 1,
            "description": "Verify completeness against requirements",
            "hook": "feature-completeness-checker.sh"
          },
          {
            "step": 2,
            "description": "Generate documentation",
            "hook": "documentation-generator.sh"
          },
          {
            "step": 3,
            "description": "Create stakeholder update",
            "command": "stakeholder-update"
          },
          {
            "step": 4,
            "description": "Update roadmap status",
            "command": "roadmap-planning --update"
          }
        ]
      }
    },

    "templates": {
      "userStory": {
        "format": "as-a-i-want-so-that",
        "sections": [
          "User role/persona",
          "Goal/action",
          "Business value",
          "Context",
          "Acceptance Criteria (Given/When/Then)",
          "Edge Cases",
          "Non-Functional Requirements",
          "Dependencies",
          "Technical Notes",
          "Estimated Effort"
        ]
      },
      "acceptanceCriteria": {
        "format": "given-when-then",
        "minimum": 2,
        "include": [
          "Happy path",
          "Error scenarios",
          "Edge cases",
          "UI feedback",
          "State changes"
        ]
      },
      "requirementsDoc": {
        "sections": [
          "Executive Summary",
          "Business Objectives",
          "User Personas",
          "Functional Requirements",
          "Non-Functional Requirements",
          "User Flows",
          "Data Requirements",
          "Integration Requirements",
          "Dependencies",
          "Constraints",
          "Risks & Mitigation",
          "Out of Scope",
          "Success Criteria",
          "Approval",
          "Revision History"
        ]
      }
    },

    "qualityStandards": {
      "userStory": {
        "minQualityScore": 70,
        "investPrinciples": true,
        "minAcceptanceCriteria": 2,
        "requireContext": false,
        "requireEffortEstimate": true
      },
      "acceptanceCriteria": {
        "minQualityScore": 70,
        "givenWhenThenFormat": "recommended",
        "requireHappyPath": true,
        "requireErrorCases": true,
        "requireEdgeCases": "recommended"
      },
      "ux": {
        "wcagLevel": "aa",
        "nielsensHeuristics": true,
        "mobileFirst": true,
        "minAccessibilityScore": 100
      }
    },

    "integrations": {
      "github": {
        "createIssuesFromStories": true,
        "linkPRsToStories": true,
        "trackInProjects": true,
        "generateReleaseNotes": true
      },
      "context7": {
        "trackFeaturePerformance": true,
        "storeRiceScores": true,
        "analyzeVelocity": true
      },
      "memory": {
        "storeTemplates": true,
        "rememberPatterns": true,
        "cachePersonas": true
      },
      "playwright": {
        "automatedAccessibility": true,
        "visualRegression": true,
        "userFlowValidation": true
      }
    },
    "vision_doc_support": {
      "enabled": true,
      "auto_load": true,
      "session_hook": "load-project-context.sh",
      "commands": [
        "create-vision-doc",
        "update-vision",
        "validate-vision",
        "sync-vision"
      ],
      "focus_areas": [
        "Business value and user impact",
        "User personas and user stories",
        "Feature prioritization (RICE)",
        "Requirements and acceptance criteria",
        "Success metrics and KPIs",
        "Go-to-market strategy",
        "Product roadmap and phasing"
      ],
      "templates": {
        "vision_doc": "pm-vision-template.md",
        "prd": "MASTER_VISION_DOCUMENT.md",
        "user_story": "user-story-template.md"
      }
    }
  }
}
