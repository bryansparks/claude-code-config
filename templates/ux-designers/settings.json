{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/templates/ux-designers/hooks/design-token-validator.sh '{{file_path}}' 'write'"
          },
          {
            "type": "command",
            "command": "~/.claude/templates/ux-designers/hooks/accessibility-checker.sh '{{file_path}}' 'write'"
          },
          {
            "type": "command",
            "command": "~/.claude/templates/ux-designers/hooks/contrast-checker.sh '{{file_path}}' 'write'"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/templates/ux-designers/hooks/design-token-validator.sh '{{file_path}}' 'edit'"
          },
          {
            "type": "command",
            "command": "~/.claude/templates/ux-designers/hooks/accessibility-checker.sh '{{file_path}}' 'edit'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/templates/ux-designers/hooks/responsive-test.sh '{{file_path}}' 'write'"
          },
          {
            "type": "command",
            "command": "~/.claude/templates/ux-designers/hooks/component-documentation.sh '{{file_path}}' 'write'"
          },
          {
            "type": "command",
            "command": "~/.claude/templates/ux-designers/hooks/design-system-sync.sh '{{file_path}}' 'write'"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/templates/ux-designers/hooks/responsive-test.sh '{{file_path}}' 'edit'"
          },
          {
            "type": "command",
            "command": "~/.claude/templates/ux-designers/hooks/design-system-sync.sh '{{file_path}}' 'edit'"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/load-project-context.sh"
          }
        ]
      }
    ]
  },
  "vision_doc_support": {
    "enabled": true,
    "auto_load": true,
    "session_hook": "load-project-context.sh",
    "commands": [
      "create-vision-doc",
      "update-vision",
      "validate-vision",
      "ux-flow-analysis"
    ],
    "focus_areas": [
      "Design system and components",
      "User journey mapping",
      "Interaction patterns",
      "Accessibility standards (WCAG)",
      "Visual design language",
      "Responsive design strategy",
      "Component library"
    ],
    "templates": {
      "vision_doc": "ux-vision-template.md",
      "design_system": "design-system-template.md",
      "user_journey": "user-journey-template.md"
    }
  },
  "model": "sonnet"
}
