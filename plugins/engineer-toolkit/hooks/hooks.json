{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_ROOT\"/hooks/lint-on-save.sh \"$TOOL_ARGS\"",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_ROOT\"/hooks/auto-test-runner.sh \"$TOOL_ARGS\" \"$TOOL_NAME\"",
            "timeout": 60
          }
        ]
      },
      {
        "matcher": "Write|Edit|Read",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_ROOT\"/hooks/complexity-check.sh \"$TOOL_ARGS\"",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash.*git.*commit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_ROOT\"/hooks/commit-message-helper.sh",
            "timeout": 20
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_ROOT\"/hooks/dependency-check.sh \"$TOOL_ARGS\"",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
