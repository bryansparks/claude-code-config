{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash.*git.*commit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_ROOT\"/hooks/pr-review-summary.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_ROOT\"/hooks/sprint-health-check.sh",
            "timeout": 20
          }
        ]
      }
    ]
  }
}
